import React, { useState } from 'react';
import { Play, Clock, ArrowLeft, Heart, Star, Mail } from 'lucide-react';

const App = () => {
  const [showStoryDetail, setShowStoryDetail] = useState(false);
  const [selectedStory, setSelectedStory] = useState(null);

  // Your stories data
  const storiesData = {
    stories: [
      {
        id: '1',
        title: 'The Magical Garden Adventure',
        excerpt: 'Join Snooie as they discover a secret garden filled with talking flowers and friendly butterflies!',
        thumbnailUrl: 'https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=500&h=300&fit=crop',
        youtubeId: 'dQw4w9WgXcQ',
        duration: '12:34',
        publishedAt: '2024-01-15',
        tags: ['Adventure', 'Nature', 'Magic', 'Friendship']
      },
      {
        id: '2',
        title: 'The Enchanted Forest Journey',
        excerpt: 'Follow Snooie through a mystical forest where trees whisper secrets.',
        thumbnailUrl: 'https://images.unsplash.com/photo-1441906363658-8b8bdaf5e6b8?w=500&h=300&fit=crop',
        youtubeId: null,
        duration: '15:22',
        publishedAt: '2024-01-10',
        tags: ['Forest', 'Adventure']
      }
    ]
  };

  const featuredStory = storiesData.stories[0];

  const viewStory = (story) => {
    setSelectedStory(story);
    setShowStoryDetail(true);
  };

  const backToHome = () => {
    setShowStoryDetail(false);
    setSelectedStory(null);
  };

  // Story Detail View
  if (showStoryDetail && selectedStory) {
    return (
      <div className="min-h-screen bg-gray-50">
        {/* Header */}
        <div className="bg-gradient-to-r from-purple-600 to-blue-600 text-white py-8">
          <div className="max-w-6xl mx-auto px-4 flex items-center gap-4">
            <button
              onClick={backToHome}
              className="flex items-center gap-2 text-white hover:text-purple-200 transition-colors"
            >
              <ArrowLeft className="w-5 h-5" />
              Back to Home
            </button>
          </div>
        </div>

        {/* Story Content */}
        <div className="max-w-4xl mx-auto px-4 py-12">
          <div className="bg-white rounded-2xl shadow-lg overflow-hidden">
            <img
              src={selectedStory.thumbnailUrl}
              alt={selectedStory.title}
              className="w-full h-64 object-cover"
            />
            <div className="p-8">
              <h1 className="text-4xl font-bold text-gray-900 mb-4">{selectedStory.title}</h1>
              <p className="text-gray-600 mb-6">{selectedStory.excerpt}</p>

              {/* Tags */}
              <div className="flex flex-wrap gap-2 mb-6">
                {selectedStory.tags.map((tag, idx) => (
                  <span
                    key={idx}
                    className="bg-purple-100 text-purple-700 px-3 py-1 rounded-full text-sm"
                  >
                    {tag}
                  </span>
                ))}
              </div>

              {/* Video/Audio Player */}
              <div className="mb-6">
                {selectedStory.youtubeId ? (
                  <iframe
                    src={`https://www.youtube.com/embed/${selectedStory.youtubeId}`}
                    title={selectedStory.title}
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowFullScreen
                    className="w-full h-96 rounded-xl"
                  />
                ) : (
                  <div className="bg-gray-100 rounded-xl p-8 text-center">
                    <Play className="w-16 h-16 text-purple-500 mx-auto mb-4" />
                    <h3 className="text-xl font-semibold mb-2">Audio Story</h3>
                    <p className="text-gray-600 mb-4">Listen to this story</p>
                    <button className="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition-colors flex items-center gap-2 mx-auto">
                      <Play className="w-4 h-4" /> Play Audio
                    </button>
                  </div>
                )}
              </div>

              {/* Meta Info */}
              <div className="flex items-center gap-4 mb-6 text-gray-500 text-sm">
                <span className="flex items-center gap-1">
                  <Clock className="w-4 h-4" /> {selectedStory.duration}
                </span>
                <span>{new Date(selectedStory.publishedAt).toLocaleDateString()}</span>
              </div>

              {/* Action Buttons */}
              <div className="flex gap-3">
                <button className="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition-colors flex items-center gap-2">
                  <Play className="w-4 h-4" /> Listen Now
                </button>
                <button className="border border-gray-300 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-50 transition-colors flex items-center gap-2">
                  <Heart className="w-4 h-4" /> Save
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    );
  }

  // Homepage View
  return (
    <div className="min-h-screen bg-gradient-to-br from-purple-400 via-pink-500 to-red-500">
      {/* Hero Section */}
      <div className="relative overflow-hidden">
        <div className="max-w-6xl mx-auto px-4 py-20 text-center text-white">
          <h1 className="text-6xl md:text-7xl font-bold mb-6 leading-tight">
            Snooies
            <br />
            <span className="text-yellow-300">Loveable Stories</span>
          </h1>
          <p className="text-xl md:text-2xl mb-12 max-w-3xl mx-auto leading-relaxed">
            Magical audio stories that spark imagination, teach valuable lessons, and create bedtime memories your children will treasure forever.
          </p>

          {/* Hero Buttons */}
          <div className="flex flex-col sm:flex-row gap-4 justify-center">
            <button
              onClick={() => viewStory(featuredStory)}
              className="bg-white text-purple-600 px-8 py-4 rounded-full font-semibold text-lg hover:bg-opacity-90 transition-colors flex items-center gap-2 justify-center"
            >
              <Play className="w-5 h-5" />
              Listen to Latest Story
            </button>
            <button className="border-2 border-white text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-white hover:text-purple-600 transition-colors flex items-center gap-2 justify-center">
              <Mail className="w-5 h-5" />
              Get Weekly Stories
            </button>
          </div>
        </div>
      </div>

      {/* Stories Preview */}
      <div className="bg-white py-20">
        <div className="max-w-6xl mx-auto px-4">
          <h2 className="text-4xl font-bold text-center text-gray-800 mb-4">
            Popular Stories
          </h2>
          <p className="text-xl text-gray-600 text-center mb-12">
            Discover magical adventures that kids love
          </p>
          
          <div className="grid grid-cols-1 md:grid-cols-2 gap-8">
            {storiesData.stories.map((story) => (
              <div key={story.id} className="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                <img
                  src={story.thumbnailUrl}
                  alt={story.title}
                  className="w-full h-48 object-cover"
                />
                <div className="p-6">
                  <h3 className="text-2xl font-bold mb-2">{story.title}</h3>
                  <p className="text-gray-600 mb-4">{story.excerpt}</p>
                  <div className="flex items-center justify-between">
                    <div className="flex items-center gap-2 text-gray-500">
                      <Clock className="w-4 h-4" />
                      <span>{story.duration}</span>
                    </div>
                    <button
                      onClick={() => viewStory(story)}
                      className="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition-colors flex items-center gap-2"
                    >
                      <Play className="w-4 h-4" />
                      Listen
                    </button>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  );
};

export default App;
